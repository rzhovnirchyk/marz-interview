{
  "verbose": true,
  "clearMocks": true,
  "moduleFileExtensions": ["ts", "js"],
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "roots": ["<rootDir>"],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "setupFiles": ["dotenv/config"],
  "setupFilesAfterEnv": ["jest-extended"]
}
